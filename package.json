{
  "name": "mmbn-web",
  "version": "0.1.0",
  "description": "Mega Man Battle Network 3-inspired web game",
  "private": true,
  "engines": {
    "node": ">=22.0.0"
  },
  "type": "module",
  "workspaces": [
    "packages/shared",
    "packages/client",
    "packages/server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=packages/client\" \"npm run dev --workspace=packages/server\"",
    "build": "npm run build --workspace=packages/shared && npm run build --workspace=packages/client && npm run build --workspace=packages/server",
    "build:server": "npm run build --workspace=packages/shared && npm run build --workspace=packages/server",
    "start": "node packages/server/dist/index.js",
    "start:local-prod": "npm run build && NODE_ENV=production node packages/server/dist/index.js",
    "test": "npm run test --workspaces",
    "test:shared": "npm run test --workspace=packages/shared",
    "test:client": "npm run test --workspace=packages/client",
    "test:server": "npm run test --workspace=packages/server",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"packages/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"packages/**/*.{ts,tsx}\"",
    "type-check": "tsc --noEmit",
    "prepare": "husky",
    "storybook": "npm run storybook --workspace=packages/client",
    "build-storybook": "npm run build-storybook --workspace=packages/client",
    "validate:prompts": "node scripts/validate-prompts.js",
    "orchestrate:backlog": "node scripts/backlog-orchestrate.mjs --mode dry",
    "orchestrate:backlog:execute": "node scripts/backlog-orchestrate.mjs --mode execute",
    "test:e2e": "node scripts/run-playwright.mjs",
    "test:e2e:card": "node scripts/run-playwright.mjs --card"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  }
}
